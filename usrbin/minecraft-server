#!/usr/bin/make -f

VER := 1.8.4
JARFILE := $(HOME)/.minecraft/server.jar

run: $(JARFILE)
	cd "$(dir $<)" && exec java -Xmx1024M -Xms1024M -jar "$<" nogui

$(JARFILE):
	mkdir -p "$(dir $@)"
	wget -O $@ "https://s3.amazonaws.com/Minecraft.Download/versions/$(VER)/minecraft_server.$(VER).jar"

.SECONDARY: $(JARFILE)

.PHONY: run
